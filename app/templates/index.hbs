{{!-- app/templates/index.hbs --}}

<div class='authentication'>
  <h1 class='welcome-message'>
    Welcome to {{app-name}}!
  </h1>
  {{! template-lint-disable block-indentation }}
  <div class='welcome-information'>
    &emsp;&emsp;Ordino is a school organization app. Ordino was created by students, with
    the goal of helping to address the organizational needs of all students. We
    hope it will help you acheive all your educational goals!
  </div>
  {{! template-lint-enable block-indentation }}
  <div class='authentication-header page-header'>
    <h1>You must be signed in to use Ordino</h1>
  </div>
  <div class='authentication-buttons'>
    {{#link-to 'sign-up'}}
      <button type="button" class="btn btn-primary">Sign Up</button>
    {{/link-to}}
    {{#link-to 'sign-in'}}
      <button type="button" class="btn btn-primary">Sign In</button>
    {{/link-to}}
  </div>
</div>
