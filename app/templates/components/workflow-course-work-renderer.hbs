<div class='left-portion'>
  <div class='label'>
    {{item.work.label}}
    {{#if item.work.completed}}
      {{#fa-icon 'check-circle' class='completed'}}
        {{bs-tooltip title='This item has been completed'}}
      {{/fa-icon}}
    {{else if item.late}}
      {{#fa-icon 'exclamation-circle' class='late'}}
        {{bs-tooltip title='This item is late'}}
      {{/fa-icon}}
    {{else if item.warn}}
      {{#fa-icon 'exclamation-triangle' class='warn'}}
        {{bs-tooltip title='This item is due within 24 hours'}}
      {{/fa-icon}}
    {{/if}}
  </div>
  <div class='work-course'>
    {{item.course.course-code}}
  </div>
</div>
{{#if item.category}}
  <div class='category'>
    {{fa-icon item.category.icon}}
  </div>
{{/if}}
<div class='weight'>
  <strong>Weight</strong>
  <div class='weight-value'>
    {{if item.work.weight (round item.work.weight 1) '---'}}%
  </div>
</div>
<div class='due'>
  <strong>Time</strong>
  <div class='due-value'>
    {{if item.work.due (moment-format item.work.due 'h:mm a') 'No due date'}}
  </div>
</div>
