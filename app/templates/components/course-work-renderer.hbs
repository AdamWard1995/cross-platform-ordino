<div class='left-portion'>
  <div class='label'>
    {{item.label}}
  </div>
  <div class='due'>
    {{if item.due (moment-format item.due 'MMMM Do YYYY, h:mm a') 'No due date'}}
  </div>
</div>
<div class='weight'>
  <div class='weight-label'>
    Weight
  </div>
  <div class='weight-value'>
    {{if item.weight item.weight '---'}}%
  </div>
</div>
<div class='grade'>
  <div class='grade-label'>
    Grade
  </div>
  <div class='grade-value'>
    {{if item.grade item.grade '---'}}%
  </div>
</div>
